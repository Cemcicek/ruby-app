<%= form_with model: @book do |f| %>

    <% if @book.errors.any? %>
        <div class="alert alert-danger" role="alert"> 
            <% @book.errors.full_messages.each do |message| %>
                <div><%= message %></div>
            <% end %>
        </div>
    <% end %>

    <div class="row mt-50">
        <div class="row mb-3">
            <%= f.label :name, class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
                <%= f.text_field :name, class: "form-control" %>
            </div>
        </div>
        <div class="row mb-3">
            <%= f.label :description, class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
                <%= f.text_area :description, class: "form-control" %>
            </div>
        </div>
        <div class="row mb-3">
            <%= f.label :writer, class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
                <%= f.text_field :writer, class: "form-control" %>
            </div>
        </div>
        <div class="row mb-3">
            <%= f.label :page, class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
                <%= f.text_field :page, class: "form-control" %>
            </div>
        </div>
        <div class="row mb-3">
            <%= f.label :image, class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
                <%= f.file_field :image, class: "form-control" %>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
<% end %>