<div class="card mb-3 mt-50 mb-50">
    <div class="row g-0">
        <div class="col-md-4">
            <% if @book.image.attached? %>
                    <%= image_tag @book.image, class: "card-img-top", alt: "Book Image" %>
                <% else %>
                    <p>No image available</p>
                <% end %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= @book.name %></h5>
                <p class="card-text"><%= @book.description %></p>
                <p class="card-text"><small class="text-body-secondary">Writer: <%= @book.writer %></small></p>
                <p class="card-text"><small class="text-body-secondary">Pages: <%= @book.page %></small></p>
            </div>
        </div>
    </div>
</div>
