<div class="row mt-50">
    <% @books.each do |bk| %>
        <div class="col-md-4 mt-50 mb-50">
            <div class="card-group">
                <div class="card">
                <% if bk.image.attached? %>
                    <%= image_tag bk.image, class: "card-img-top", alt: "Book Image" %>
                <% else %>
                    <p>No image available</p>
                <% end %>
                    <div class="card-body">
                        <h5 class="card-title"><%= link_to bk.name, book_path(bk) %> </h5>
                        <p class="card-text"><%= bk.description %></p>
                        <p class="card-text"><small class="text-body-secondary">Writer: <%= bk.writer %></small></p>
                            <%= button_to 'Edit', edit_book_path(bk), class: "btn btn-warning", method: 'get' %>
                            <p></p>
                            <%= button_to 'Remove', book_path(bk), class: "btn btn-danger", method: 'delete', data: {confirm: 'Are you sure?'} %>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>